{
  "manifest_version": 3,
  "name": "HedgePDF",
  "version": "1.0",
  "description": "HedgeDoc内のドキュメントをPDF化する拡張機能",
  "permissions": ["scripting", "downloads"],
  "content_scripts": [
    {
      "matches": ["https://*/**", "http://*/**"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
